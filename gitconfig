[user]
  name  = Robert Williams
  email = rob@r-williams.com
[color]
  diff   = auto
  status = auto
  branch = auto
	ui = auto
[alias]
  fr = pull --rebase
[core]
  excludesfile = ~/.gitignore_global
  autocrlf     = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cd)%Creset
[github]
  user = robwilliams
[advice]
	statusHints = false
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true

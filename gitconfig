[color]
  diff   = auto
  status = auto
  branch = auto
	ui = auto
[alias]
  fr = pull --rebase
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
[core]
  excludesfile = ~/dotfiles/gitignore_global
  autocrlf     = input
	editor = /usr/local/bin/nvim
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cd)%Creset
[github]
  user = robwilliams
[advice]
	statusHints = false
[push]
	default = current
[help]
	autocorrect = 5
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[difftool]
	prompt = false
[mergetool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[fetch]
	prune = true
[commit]
  template= ~/dotfiles/gitmessage
[pull]
	rebase = true
